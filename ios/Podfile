platform :ios, '11.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  get_flutter_root
end

def flutter_env
  return FLUTTER_ROOT unless FLUTTER_ROOT.nil?
  File.expand_path(ENV['FLUTTER_ROOT'] || "$HOME/flutter", __FILE__)
end

def get_flutter_root
  File.expand_path(File.join(packages_path, '..')
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_post_install(target)
  end
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_build_settings_ipa target
  Flutter::Flutter.parse_multiline_properties_file("${FLUTTER_ROOT}/packages/flutter_tools/lib/src/build_info.txt").each do |k,v|
    ENV[k] = v
  end
end
